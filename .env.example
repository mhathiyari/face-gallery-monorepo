# Face Gallery Environment Configuration
# Copy this file to .env and customize as needed
# Usage: cp .env.example .env

# ============================================
# Directory Paths
# ============================================

# Source photos directory (read-only)
PHOTOS_DIR=./data/photos

# Processed collections output
COLLECTIONS_DIR=./data/collections

# Web UI uploads directory
UPLOADS_DIR=./data/uploads


# ============================================
# Server Configuration
# ============================================

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
FACE_VIEWER_HOST=0.0.0.0

# Server port
FACE_VIEWER_PORT=5050

# Debug mode (0=off, 1=on)
DEBUG=0


# ============================================
# GPU Configuration (Docker only)
# ============================================

# Number of GPUs to use
GPU_COUNT=1

# Specific GPU device IDs (comma-separated, e.g., "0,1")
# NVIDIA_VISIBLE_DEVICES=0


# ============================================
# Model Configuration
# ============================================

# Model device (auto, cuda, cpu, mps)
# MODEL_DEVICE=auto

# Model name (buffalo_l, buffalo_m, buffalo_s)
# MODEL_NAME=buffalo_l


# ============================================
# Advanced Settings
# ============================================

# Batch size for processing (lower = less memory)
# BATCH_SIZE=32

# Clustering epsilon (0.4-0.8, lower = stricter)
# CLUSTERING_EPS=0.6

# Minimum samples for clustering
# CLUSTERING_MIN_SAMPLES=2


# ============================================
# Google Drive Integration (Optional)
# ============================================

# Path to OAuth credentials
# DRIVE_CREDENTIALS_PATH=./credentials.json

# Path to store access token
# DRIVE_TOKEN_PATH=./token.json
